# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Backend API URL
REACT_APP_API_BASE_URL=https://ecommerce-platform-nizy.onrender.com/api

# Google reCAPTCHA Site Key (get from https://www.google.com/recaptcha/admin)
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Google OAuth Client IDs (get from https://console.cloud.google.com)
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
REACT_APP_GOOGLE_SERVER_CLIENT_ID=your_google_server_client_id_here.apps.googleusercontent.com

# Android specific (for production)
REACT_APP_ANDROID_GOOGLE_CLIENT_ID=your_android_google_client_id_here.apps.googleusercontent.com

# Development/Testing flags
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_CAPTCHA_FALLBACK=true